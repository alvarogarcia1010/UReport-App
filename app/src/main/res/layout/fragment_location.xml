<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context=".Fragments.NewReport.LocationFragment">

    <fragment
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:id="@+id/location_map"
            tools:context=".Fragments.MarkerMapsFragment"
            android:name="com.google.android.gms.maps.SupportMapFragment">

    </fragment>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="20dp"
            android:orientation="vertical">


        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <EditText
                    android:id="@+id/fr_location_et_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Localización específica"/>

        </com.google.android.material.textfield.TextInputLayout>

        <Button
                android:layout_marginTop="25dp"
                android:id="@+id/fr_location_bt_next"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#1799bb"
                android:text="Siguiente"
                android:textColor="#ffffff"/>

    </LinearLayout>


</LinearLayout>