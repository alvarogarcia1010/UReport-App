<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:padding="10dp"
              android:gravity="center"
              tools:context=".Fragments.NewReport.LocationFragment">

    <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:counterMaxLength="120"
            app:counterEnabled="true">

        <EditText
                android:lines="4"
                android:maxLength="120"
                android:maxLines="4"
                android:id="@+id/fr_location_et_measures"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="¿Cómo propone solucionar el problema?"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">

    <EditText
            android:id="@+id/fr_location_et_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Localización específica"/>

    </com.google.android.material.textfield.TextInputLayout>

    <Button
            android:layout_marginTop="50dp"
            android:id="@+id/fr_location_bt_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#1799bb"
            android:text="Guardar"
            android:textColor="#ffffff"/>

</LinearLayout>